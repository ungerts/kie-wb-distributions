    <profile>
      <id>kie-wb</id>
      <activation>
        <property>
          <name>full</name>
        </property>
      </activation>
      <properties>
        <deployable.groupId>org.kie</deployable.groupId>
        <deployable.artifactId>kie-wb-distribution-wars</deployable.artifactId>
        <deployable.context>kie-wb</deployable.context>
      </properties>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-failsafe-plugin</artifactId>
              <configuration>
                <groups>KieWbSmoke</groups>
              </configuration>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
    </profile>

    <profile>
      <id>arquillian-eap64x</id>
      <properties>
        <override.version.org.jboss.as>7.5.4.Final-redhat-3</override.version.org.jboss.as>
        <version.org.jboss.as.dist>7.5.4.Final-redhat-3</version.org.jboss.as.dist>
        <jboss.server.name>jboss-eap-6.4</jboss.server.name>
        <deployable.classifier>${eap64.deployable.classifier}</deployable.classifier>

        <arquillian.launch>eap6</arquillian.launch>
      </properties>

      <dependencies>
        <!--  wars -->
        <dependency>
          <groupId>org.kie</groupId>
          <artifactId>kie-wb-distribution-wars</artifactId>
          <classifier>${eap64.deployable.classifier}</classifier>
          <type>war</type>
        </dependency>
        <dependency>
          <groupId>org.kie</groupId>
          <artifactId>kie-drools-wb-distribution-wars</artifactId>
          <classifier>${eap64.deployable.classifier}</classifier>
          <type>war</type>
        </dependency>

        <!--  arquilian -->
        <dependency>
          <groupId>org.jboss.as</groupId>
          <artifactId>jboss-as-arquillian-container-managed</artifactId>
          <scope>test</scope>
        </dependency>

        <!-- jboss as/eap -->
        <dependency>
          <groupId>org.jboss.as</groupId>
          <artifactId>jboss-as-dist</artifactId>
          <type>zip</type>
        </dependency>
      </dependencies>

      <dependencyManagement>
        <dependencies>
          <dependency>
            <groupId>org.jboss.as</groupId>
            <artifactId>jboss-as-dist</artifactId>
            <version>${version.org.jboss.as.dist}</version>
            <type>zip</type>
          </dependency>
        </dependencies>
      </dependencyManagement>

      <build>
        <plugins>
          <!-- 1. install server in the build/target dir -->
          <plugin>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <id>unpack-jboss</id>
                <phase>generate-test-resources</phase>
                <goals>
                  <goal>unpack</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>org.jboss.as</groupId>
                      <artifactId>jboss-as-dist</artifactId>
                      <version>${version.org.jboss.as.dist}</version>
                      <type>zip</type>
                      <overWrite>false</overWrite>
                      <outputDirectory>${project.build.directory}</outputDirectory>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
              <execution>
                <id>copy-byteman-agent</id>
                <phase>generate-test-resources</phase>
                <goals>
                  <goal>copy</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>org.jboss.byteman</groupId>
                      <artifactId>byteman</artifactId>
                      <version>${version.org.jboss.byteman}</version>
                      <type>jar</type>
                      <overWrite>true</overWrite>
                      <outputDirectory>target/</outputDirectory>
                      <destFileName>byteman.jar</destFileName>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
              <execution>
                <id>get-eap-kie-wb-war</id>
                <phase>generate-test-resources</phase>
                <goals>
                  <goal>copy</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>${deployable.groupId}</groupId>
                      <artifactId>${deployable.artifactId}</artifactId>
                      <classifier>${eap64.deployable.classifier}</classifier>
                      <type>war</type>
                      <overWrite>false</overWrite>
                    </artifactItem>
                  </artifactItems>
                  <outputDirectory>${project.build.directory}/wars</outputDirectory>
                </configuration>
              </execution>
            </executions>
          </plugin>

          <!-- 2. install files with user/password information in the server dir -->
          <plugin>
            <artifactId>maven-resources-plugin</artifactId>
            <executions>
              <execution>
                <id>copy-user-config</id>
                <phase>process-test-resources</phase>
                <goals>
                  <goal>copy-resources</goal>
                </goals>
                <configuration>
                  <outputDirectory>${project.build.directory}/${jboss.server.name}/standalone/configuration</outputDirectory>
                  <resources>
                    <resource>
                      <directory>${project.basedir}/../kie-wb-smoke-tests-main/src/test/resources/eap-wildfly-shared/config</directory>
                      <filtering>false</filtering>
                    </resource>
                  </resources>
                  <overwrite>true</overwrite>
                </configuration>
              </execution>
              <execution>
                <id>copy-ssl-files</id>
                <phase>process-test-resources</phase>
                <goals>
                  <goal>copy-resources</goal>
                </goals>
                <configuration>
                  <outputDirectory>${project.build.directory}/${jboss.server.name}/standalone/configuration/ssl</outputDirectory>
                  <resources>
                    <resource>
                      <directory>${project.basedir}/../kie-wb-smoke-tests-main/src/test/resources/ssl/server</directory>
                      <filtering>false</filtering>
                    </resource>
                  </resources>
                  <overwrite>true</overwrite>
                </configuration>
              </execution>
            </executions>
          </plugin>

          <!-- 3. modify server configuration -->
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>xml-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>modify-standalone-full</id>
                <phase>process-test-resources</phase>
                <goals>
                  <goal>transform</goal>
                </goals>
                <configuration>
                  <transformationSets>
                    <transformationSet>
                      <dir>${project.build.directory}/${jboss.server.name}/standalone/configuration</dir>
                      <outputDir>${project.build.directory}/${jboss.server.name}/standalone/configuration</outputDir>
                      <includes>
                        <include>standalone-full.xml</include>
                      </includes>
                      <stylesheet>${project.basedir}/../kie-wb-smoke-tests-main/src/test/resources/eap6/xslt/addDebugLogging.xslt</stylesheet>
                    </transformationSet>
                    <transformationSet>
                      <dir>${project.build.directory}/${jboss.server.name}/standalone/configuration</dir>
                      <outputDir>${project.build.directory}/${jboss.server.name}/standalone/configuration</outputDir>
                      <includes>
                        <include>standalone-full.xml</include>
                      </includes>
                      <stylesheet>${project.basedir}/../kie-wb-smoke-tests-main/src/test/resources/eap6/xslt/changeJmsMessagingConfig.xslt</stylesheet>
                    </transformationSet>
                  </transformationSets>
                </configuration>
              </execution>
            </executions>
          </plugin>

          <!-- 4. clean up -->
          <plugin>
            <groupId>com.google.code.maven-replacer-plugin</groupId>
            <artifactId>replacer</artifactId>
            <executions>
              <execution>
                <id>fix-broken-junit-reports</id>
                <phase>post-integration-test</phase>
                <goals>
                  <goal>replace</goal>
                </goals>
                <configuration>
                  <basedir>${project.build.directory}/failsafe-reports</basedir>
                  <includes>
                    <include>TEST*xml</include>
                  </includes>
                  <unescape>true</unescape>
                  <tokenValueMap>${basedir}/replace-tokenFile.txt</tokenValueMap>
                  <ignoreErrors>true</ignoreErrors>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>arquillian-tomcat8x</id>

      <properties>
        <tomcat.home>${project.build.directory}/apache-tomcat-${version.org.apache.tomcat}</tomcat.home>
        <deployable.classifier>${tomcat7.deployable.classifier}</deployable.classifier>

        <arquillian.launch>tomcat</arquillian.launch>
      </properties>

      <dependencies>
        <!-- wars -->
        <dependency>
          <groupId>org.kie</groupId>
          <artifactId>kie-wb-distribution-wars</artifactId>
          <classifier>tomcat7</classifier>
          <scope>test</scope>
          <type>war</type>
        </dependency>
        <dependency>
          <groupId>org.kie</groupId>
          <artifactId>kie-drools-wb-distribution-wars</artifactId>
          <classifier>tomcat7</classifier>
          <scope>test</scope>
          <type>war</type>
        </dependency>

        <!-- arquillian -->
        <dependency>
          <groupId>org.jboss.arquillian.container</groupId>
          <artifactId>arquillian-tomcat-managed-7</artifactId>
          <scope>test</scope>
        </dependency>
        <dependency>
          <!-- ARQ-1456 -->
          <groupId>commons-codec</groupId>
          <artifactId>commons-codec</artifactId>
          <scope>test</scope>
        </dependency>

        <!-- server -->
        <dependency>
          <groupId>org.apache.tomcat</groupId>
          <artifactId>tomcat</artifactId>
          <type>zip</type>
          <scope>test</scope>
        </dependency>

        <!-- deps needed by Tomcat 7x and Tomcat 8x -->
        <!-- :persistence -->
        <dependency>
          <groupId>org.codehaus.btm</groupId>
          <artifactId>btm</artifactId>
          <scope>test</scope>
        </dependency>
        <dependency>
          <groupId>org.codehaus.btm</groupId>
          <artifactId>btm-tomcat55-lifecycle</artifactId>
          <scope>test</scope>
        </dependency>
        <dependency>
          <groupId>com.h2database</groupId>
          <artifactId>h2</artifactId>
          <scope>test</scope>
        </dependency>
        <dependency>
          <groupId>org.jboss.spec.javax.transaction</groupId>
          <artifactId>jboss-transaction-api_1.1_spec</artifactId>
          <scope>test</scope>
        </dependency>
        <!-- :logging -->
        <dependency>
          <groupId>org.slf4j</groupId>
          <artifactId>slf4j-jdk14</artifactId>
        </dependency>
        <!-- :integration -->
        <dependency>
          <groupId>org.kie</groupId>
          <artifactId>kie-tomcat-integration</artifactId>
          <scope>test</scope>
        </dependency>
        <!-- :JACC -->
        <dependency>
          <groupId>org.jboss.spec.javax.security.jacc</groupId>
          <artifactId>jboss-jacc-api_1.4_spec</artifactId>
          <scope>test</scope>
        </dependency>
      </dependencies>

      <dependencyManagement>
        <dependencies>
          <dependency>
            <groupId>org.apache.tomcat</groupId>
            <artifactId>tomcat</artifactId>
            <version>${version.org.apache.tomcat}</version>
            <scope>test</scope>
          </dependency>
        </dependencies>
      </dependencyManagement>

      <build>
        <plugins>

          <!-- 1. unpack tomcat, grab war and install jars needed for tomcat-->
          <plugin>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <id>unpack-tomcat</id>
                <phase>generate-test-resources</phase>
                <goals>
                  <goal>unpack</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>org.apache.tomcat</groupId>
                      <artifactId>tomcat</artifactId>
                      <version>${version.org.apache.tomcat}</version>
                      <type>zip</type>
                      <overWrite>false</overWrite>
                      <outputDirectory>${project.build.directory}</outputDirectory>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
              <execution>
                <id>get-tomcat-kie-wb-war</id>
                <phase>generate-test-resources</phase>
                <goals>
                  <goal>copy</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <artifactItem>
                      <groupId>org.kie</groupId>
                      <artifactId>kie-wb-distribution-wars</artifactId>
                      <classifier>tomcat7</classifier>
                      <type>war</type>
                      <overWrite>false</overWrite>
                    </artifactItem>
                  </artifactItems>
                  <outputDirectory>${project.build.directory}/wars</outputDirectory>
                </configuration>
              </execution>
              <execution>
                <id>copy-kie-wb-libs</id>
                <phase>generate-test-resources</phase>
                <goals>
                  <goal>copy</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <!-- peristence -->
                    <artifactItem>
                      <groupId>org.codehaus.btm</groupId>
                      <artifactId>btm</artifactId>
                      <type>jar</type>
                      <overWrite>false</overWrite>
                    </artifactItem>
                    <artifactItem>
                      <groupId>org.codehaus.btm</groupId>
                      <artifactId>btm-tomcat55-lifecycle</artifactId>
                      <type>jar</type>
                      <overWrite>false</overWrite>
                    </artifactItem>
                    <artifactItem>
                      <groupId>com.h2database</groupId>
                      <artifactId>h2</artifactId>
                      <type>jar</type>
                      <overWrite>false</overWrite>
                    </artifactItem>
                    <artifactItem>
                      <groupId>org.jboss.spec.javax.transaction</groupId>
                      <artifactId>jboss-transaction-api_1.1_spec</artifactId>
                      <type>jar</type>
                      <overWrite>false</overWrite>
                    </artifactItem>
                    <!-- logging -->
                    <artifactItem>
                      <groupId>org.slf4j</groupId>
                      <artifactId>slf4j-api</artifactId>
                      <type>jar</type>
                      <overWrite>false</overWrite>
                    </artifactItem>
                    <artifactItem>
                      <groupId>org.slf4j</groupId>
                      <artifactId>slf4j-jdk14</artifactId>
                      <type>jar</type>
                      <overWrite>false</overWrite>
                    </artifactItem>
                    <!-- integration -->
                    <artifactItem>
                      <groupId>org.kie</groupId>
                      <artifactId>kie-tomcat-integration</artifactId>
                      <type>jar</type>
                      <overWrite>false</overWrite>
                    </artifactItem>
                    <!-- JACC -->
                    <artifactItem>
                      <groupId>org.jboss.spec.javax.security.jacc</groupId>
                      <artifactId>jboss-jacc-api_1.4_spec</artifactId>
                      <type>jar</type>
                      <overWrite>false</overWrite>
                    </artifactItem>
                  </artifactItems>
                  <outputDirectory>${tomcat.home}/lib</outputDirectory>
                </configuration>
              </execution>
            </executions>
          </plugin>

          <!-- 2. copy configuration files (users, etc) -->
          <plugin>
            <artifactId>maven-resources-plugin</artifactId>
            <executions>
              <execution>
                <id>copy-resources</id>
                <phase>process-test-resources</phase>
                <goals>
                  <goal>copy-resources</goal>
                </goals>
                <configuration>
                  <outputDirectory>${tomcat.home}/conf</outputDirectory>
                  <overwrite>true</overwrite>
                  <resources>
                    <resource>
                      <!-- so that files with (maven) filtered values are used -->
                      <directory>${project.basedir}/../kie-wb-smoke-tests-main/src/test/filtered-resources/tomcat-shared/config</directory>
                    </resource>
                  </resources>
                </configuration>
              </execution>
            </executions>
          </plugin>

          <!-- 3. modify tomcat server.xml  -->
          <plugin>
            <groupId>com.google.code.maven-replacer-plugin</groupId>
            <artifactId>replacer</artifactId>
            <executions>
              <execution>
                <id>fix-server-xml</id>
                <phase>process-test-resources</phase>
                <goals>
                  <goal>replace</goal>
                </goals>
                <configuration>
                  <basedir>${tomcat.home}/conf</basedir>
                  <includes>
                    <include>server.xml</include>
                  </includes>
                  <replacements>
                    <replacement>
                      <token>  &lt;/Host&gt;</token>
                      <value>&lt;Valve className="org.kie.integration.tomcat.JACCValve" /&gt;
                        &lt;/Host&gt;</value>
                    </replacement>
                  </replacements>
                </configuration>
              </execution>
            </executions>
          </plugin>

          <!-- 4. delete the ROOT app -->
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <phase>generate-test-resources</phase>
                <configuration>
                  <tasks>
                    <delete dir="${project.build.directory}/tomcat-${version.org.apache.tomcat}/webapps/ROOT"/>
                  </tasks>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>

          <!-- 5. run tests -->
          <plugin>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
              <environmentVariables>
                <CATALINA_HOME>${tomcat.home}</CATALINA_HOME>
              </environmentVariables>
              <!-- Workaround for SHRINKDESC-97 until it is fixed. -->
              <argLine>-Dfile.encoding=${project.build.sourceEncoding}</argLine>
            </configuration>
          </plugin>
        </plugins>
      </build>

    </profile>

    <profile>
      <id>arquillian-wildfly8x</id>

      <properties>
        <wildfly.server.name>wildfly-${version.wildfly8}</wildfly.server.name>
        <deployable.classifier>${wildfly8.deployable.classifier}</deployable.classifier>

        <arquillian.launch>wildfly</arquillian.launch>
      </properties>

      <dependencies>
        <!-- wars -->
        <dependency>
          <groupId>org.kie</groupId>
          <artifactId>kie-wb-distribution-wars</artifactId>
          <classifier>${wildfly8.deployable.classifier}</classifier>
          <type>war</type>
        </dependency>
        <dependency>
